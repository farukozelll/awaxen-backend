# ===========================================
# Awaxen Backend Environment Variables
# v6.0 Hybrid Schema
# ===========================================

# --- DATABASE ---
DB_USER=awaxen
DB_PASSWORD=your_secure_password
DB_NAME=awaxen_db

# --- REDIS (Celery Broker) ---
# Docker içinde redis servis adı kullanılır
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- MQTT ---
MQTT_BROKER_URL=mqtt
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_SENSOR_TOPIC=awaxen/sensors/#
MQTT_CLIENT_ID=awaxen-backend

# --- AUTH0 ---
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.awaxen.com

# --- ENCRYPTION ---
# Token'ları şifrelemek için Fernet key
# Oluşturmak için: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# --- EXTERNAL APIs ---
OPENWEATHER_API_KEY=your_openweather_key

# --- EPİAŞ (Enerji Piyasası) ---
# Şeffaflık Platformu credentials (opsiyonel, yoksa public endpoint kullanılır)
