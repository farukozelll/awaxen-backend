# ===========================================
# Awaxen Backend Environment Variables
# v6.0 Hybrid Schema
# ===========================================

# --- DATABASE ---
# Local Docker (TimescaleDB)
DB_USER=awaxen
DB_PASSWORD=your_secure_password
DB_NAME=awaxen_db

# Production (Neon.tech) - Bunu Render/Heroku'da DATABASE_URL olarak ayarla
# DATABASE_URL=postgresql://user:password@ep-xxx.eu-central-1.aws.neon.tech/neondb?sslmode=require

# --- REDIS (Celery Broker) ---
# Docker içinde redis servis adı kullanılır
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- MQTT ---
MQTT_BROKER_URL=mqtt
MQTT_BROKER_PORT=1883
MQTT_USERNAME=awaxen_admin
MQTT_PASSWORD=gizli_sifre_123
MQTT_SENSOR_TOPIC=awaxen/sensors/#
MQTT_CLIENT_ID=awaxen-backend

# --- AUTH0 ---
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.awaxen.com

# --- ENCRYPTION ---
# Token'ları şifrelemek için Fernet key
# Oluşturmak için: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# --- EXTERNAL APIs ---
OPENWEATHER_API_KEY=your_openweather_key

# --- EPİAŞ (Enerji Piyasası) ---
# Şeffaflık Platformu credentials (opsiyonel, yoksa public endpoint kullanılır)
EPIAS_USERNAME=your_epias_email
EPIAS_PASSWORD=your_epias_password

# --- PGADMIN ---
PGADMIN_EMAIL=admin@awaxen.com
PGADMIN_PASS=admin

# --- FLASK ---
FLASK_ENV=production
FLASK_DEBUG=false

# --- TELEGRAM ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# --- MINIO (Object Storage) ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=awaxen-images

# --- AI DETECTION ---
AI_CONFIDENCE_THRESHOLD=0.40
ENABLE_SAHI=true

# --- WATCHTOWER (Auto-Update) ---
# Telegram/Slack notification URL (opsiyonel)
# Format: telegram://token@telegram?chats=@channel
WATCHTOWER_NOTIFICATION_URL=

# --- FLOWER (Celery Monitoring) ---
FLOWER_USER=admin
FLOWER_PASSWORD=admin
 